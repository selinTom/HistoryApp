<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FCFF">
    <ImageView
        android:id="@+id/new_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcode"
        android:layout_alignTop="@+id/hide"
        android:layout_toLeftOf="@id/hide"
        />
    <ImageView
        android:id="@id/hide"
        android:layout_below="@+id/edit_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        />
    <ImageView
        android:id="@+id/scan"
        android:layout_toRightOf="@id/hide"
        android:layout_alignTop="@id/hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scan"/>
    <EditText
        android:id="@id/edit_qr_code"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="编辑生成二维码的内容"
        android:textColor="@android:color/holo_blue_light"
        />
    <ImageView
        android:id="@+id/generate_code"
        android:layout_below="@id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        />
</RelativeLayout>